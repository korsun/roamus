{
  "name": "roamus",
  "version": "0.2.0",
  "description": "An outdoors maps and routing app",
  "main": "server/index.js",
  "author": "Kirill Korsun <korsun.me@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:server": "webpack --mode development --config server/webpack.server.js",
    "start:server": "node server/dist/server.js",
    "build:client": "webpack --mode development --config client/webpack.client.js",
    "start:client": "webpack serve --mode development --config client/webpack.client.js",
    "build:svg": "svgr -d . . --filename-case kebab --ext 'svgr.tsx'",
    "lint": "tsc && eslint --report-unused-disable-directives --max-warnings 0",
    "test": "jest --config='./testing/jest.config.js'",
		"prepare": "husky install",
		"pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@svgr/cli": "^8.0.1",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "css-loader": "^6.7.3",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.12.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.6",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "ol": "^7.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.3.8"
  },
  "lint-staged": {
    "./**/*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write"
    ],
    "./**/*.{ts,tsx}": [
      "yarn lint"
    ]
  }
}
