{
  "name": "roamus",
  "version": "0.2.0",
  "description": "An outdoors maps and routing app",
  "main": "apps/server/index.js",
  "author": "Kirill Korsun <korsun.me@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "client:dev": "pnpm --filter @roamus/client dev",
    "client:build": "pnpm --filter @roamus/client build",
    "client:preview": "pnpm --filter @roamus/client preview",
    "server:dev": "pnpm --filter @roamus/server dev",
    "server:build": "pnpm --filter @roamus/server build",
    "server:start": "NODE_ENV=production pnpm --filter @roamus/server start",
    "build:svg": "svgr -d . . --filename-case kebab --ext 'svgr.tsx'",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 .",
    "test": "vitest --config='./testing/vitest.config.js'",
    "prettier": "prettier --write .",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "dev": "concurrently \"pnpm client:dev\" \"pnpm server:dev\"",
    "build": "pnpm client:build && pnpm server:build"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.0.2",
    "vite": "^5.2.7",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vitest-fetch-mock": "^0.2.2"
  },
  "lint-staged": {
    "./**/*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write"
    ],
    "./**/*.{ts,tsx} !(*.d.ts) !(*.spec.ts)": [
      "pnpm lint"
    ]
  }
}
