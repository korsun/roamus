{
  "name": "roamus",
  "version": "0.2.0",
  "description": "An outdoors maps and routing app",
  "main": "server/index.js",
  "author": "Kirill Korsun <korsun.me@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build:server": "webpack --mode development --config server/webpack.server.js",
    "start:server": "node server/dist/server.js",
    "build:client": "webpack --mode development --config client/webpack.client.js",
    "start:client": "webpack serve --mode development --config client/webpack.client.js",
    "build:svg": "svgr -d . . --filename-case kebab --ext 'svgr.tsx'",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 .",
    "test": "vitest --config='./testing/vitest.config.js'",
    "prettier": "prettier --write .",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@svgr/cli": "^8.0.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "css-loader": "^6.7.3",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "vite": "^5.2.7",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vitest-fetch-mock": "^0.2.2",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^5.0.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.6",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "nanoevents": "^9.0.0",
    "ol": "^7.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.3.8"
  },
  "lint-staged": {
    "./**/*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write"
    ],
    "./**/*.{ts,tsx} !(*.d.ts) !(*.spec.ts)": [
      "pnpm lint"
    ]
  }
}
