{
  "compilerOptions": {
		"types": [
			"vitest/globals"
		],
    "target": "es5",
    "lib": ["es6", "es7", "es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "sourceMap": false,
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["client/src/*", "server/src/*"],
      "@common/*": ["common/*"]
    }
  },
	"exclude": [
		"**/*.spec.ts"
	]
}
